//- layout.pug
include mixins/layout.pug
doctype html
html
  block link
    -var selected = 'home'; //default
  
  -var menu = {'Home': 'index.html', 'About': '/about', 'Skills': '/skills', 'Portfolio': '/portfolio', 'Contact': '/contact'};
    head
      block head
        title #{title}
        block scripts
          script(src='//localhost:35729/livereload.js')
        block style
            link(rel='stylesheet', href='/css/style.min.css')
    body
      block content
        block header
          header.main-header
            nav.wrapper
              each val, key in menu
                  if selected === key
                    a.selected(href=val, title=key)= key
                  else
                    a(href=val, title=key)= key
          main
            section.wrapper
              block article
        block foot
          footer
            p some footer content